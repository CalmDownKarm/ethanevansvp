
{{#if isSecondary}}
    <ul class="nav" role="menu">
        {{#foreach navigation}}        
            <li class="nav-submenuitem" role="submenuitem">
                <a href="{{url}}">
                    <a href="{{url absolute="true"}}">{{label}}</a>
                </a>
            </li>
        {{/foreach}}
    </ul>
{{else}}
    <ul class="nav" role="menu">
        {{#foreach navigation}}            
            <li class="{{link_class for=(url) class=(concat "nav-" slug)}}" role="menuitem">
                <a href="{{url absolute="true"}}">{{label}}</a>
            </li>
        {{/foreach}}
    </ul>
{{/if}}

